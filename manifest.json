{
    "manifest_version": 3,
    "name": "Chess.com Russian Flag",
    "description": "Returns Russian flag on chess.com",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://*.chess.com/"]
}